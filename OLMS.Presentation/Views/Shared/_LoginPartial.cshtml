@if (User?.Identity?.IsAuthenticated == true)
{
    <div class="user-info">
        <span>Welcome, @User.Identity.Name</span>
        <form asp-controller="Authentication" asp-action="Logout" method="post" style="display:inline;">
            <button type="submit" class="default-btn">Logout</button>
        </form>
    </div>
}
else
{
    <a href="@Url.Action("Index", "Authentication")" class="default-btn">
        Login
    </a>
}

<style>
    .user-info {
        font-size: 14px; /* Giảm kích thước chữ */
        padding: 5px 10px; /* Giảm khoảng cách bên trong */
        display: flex;
        align-items: center;
        gap: 8px; /* Khoảng cách giữa tên và nút logout */
    }

    .user-info span {
        white-space: nowrap; /* Tránh xuống dòng */
    }

    .user-info button {
        font-size: 12px; /* Giảm kích thước nút */
        padding: 5px 10px;
    }
</style>

