@{
    ViewData["Title"] = "Login & Register";
}

<div class="login-register-area bg-light py-5">
    <div class="container">
        <div class="col-lg-6 text-center">
                <img src="/assets/images/login.jpg" alt="Login Image" class="img-fluid rounded">
            </div>
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="login-register-content p-4 shadow rounded bg-white">
                    <ul class="nav nav-pills mb-3 justify-content-center">
                        <li class="nav-item">
                            <a class="nav-link active" id="login-tab" data-bs-toggle="tab" href="#login">Log in</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="register-tab" data-bs-toggle="tab" href="#register">Register</a>
                        </li>
                    </ul>

                    <div class="tab-content">
                        <!-- Login Tab -->
                        <div class="tab-pane fade show active" id="login">
                            <h3 class="text-center fw-bold">Log in to your account</h3>

                            <!-- Role Selection 
                            <div class="mb-3 d-flex align-items-center">
                                <label for="loginRole" class="form-label w-auto">You are:</label>
                                <select id="loginRole" class="form-select w-50">
                                    <option value="student">Student</option>
                                    <option value="professor">Professor</option>
                                </select>
                            </div>-->

                            <!-- Student Login Form -->
                            <form id="studentLoginForm">
                                <div class="mb-3">
                                    <input type="text" class="form-control" placeholder="ID" required>
                                </div>
                                <div class="mb-3">
                                    <input type="password" class="form-control" placeholder="Password" required>
                                </div>
                                <button type="submit" class="btn btn-primary w-100 py-2">Log in</button>
                            </form>

                            <!-- Professor Login Form -->
                            <form id="professorLoginForm" class="d-none">
                                <div class="mb-3">
                                    <input type="text" class="form-control" placeholder="ID" required>
                                </div>
                                <div class="mb-3">
                                    <input type="password" class="form-control" placeholder="Password" required>
                                </div>
                                <button type="submit" class="btn btn-primary w-100 py-2">Log in</button>
                            </form>
                        </div>

                        <!-- Register Tab -->
                        <div class="tab-pane fade" id="register">
                            <h3 class="text-center fw-bold">Create a new account</h3>

                            <!-- Role Selection -->
                            <div class="mb-3 d-flex align-items-center">
                                <label for="registerRole" class="form-label w-auto">You are:</label>
                                <select id="registerRole" class="form-select w-50">
                                    <option value="student">Student</option>
                                    <option value="professor">Professor</option>
                                </select>
                            </div>

                            <!-- Student Register Form -->
                            <form id="studentRegisterForm">
                                <div class="mb-3">
                                    <input type="text" class="form-control" placeholder="ID" required>
                                </div>
                                <div class="mb-3">
                                    <input type="text" class="form-control" placeholder="Full Name" required>
                                </div>
                                <div class="mb-3">
                                    <input type="email" class="form-control" placeholder="Email" required>
                                </div>
                                <div class="mb-3">
                                    <input type="password" class="form-control" placeholder="Password" required>
                                </div>
                                <button type="submit" class="btn btn-success w-100 py-2">Register</button>
                            </form>

                            <!-- Professor Register Form -->
                            <form id="professorRegisterForm" class="d-none">
                                <div class="mb-3">
                                    <input type="text" class="form-control" placeholder="ID" required>
                                </div>
                                <div class="mb-3">
                                    <input type="text" class="form-control" placeholder="Full Name" required>
                                </div>
                                <div class="mb-3">
                                    <input type="email" class="form-control" placeholder="Email" required>
                                </div>
                                <div class="mb-3">
                                    <input type="password" class="form-control" placeholder="Password" required>
                                </div>
                                <button type="submit" class="btn btn-success w-100 py-2">Register</button>
                            </form>
                        </div> <!-- End Register Tab -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.getElementById("loginRole").addEventListener("change", function () {
        let selectedRole = this.value;
        document.getElementById("studentLoginForm").classList.toggle("d-none", selectedRole !== "student");
        document.getElementById("professorLoginForm").classList.toggle("d-none", selectedRole !== "professor");
    });

    document.getElementById("registerRole").addEventListener("change", function () {
        let selectedRole = this.value;
        document.getElementById("studentRegisterForm").classList.toggle("d-none", selectedRole !== "student");
        document.getElementById("professorRegisterForm").classList.toggle("d-none", selectedRole !== "professor");
    });
</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
